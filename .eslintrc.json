{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "no-console": "off",
        "no-unused-vars": "off",
        "no-trailing-spaces": ["error", { "skipBlankLines": true }],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "indent": "off",
        "eol-last": [
            "error", 
            "never"
        ],
        "max-len": ["error", { "comments": 200 }]
    }
    
}
